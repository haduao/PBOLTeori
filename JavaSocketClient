        try {
            s = new Socket("192.168.8.100",3306);
            din = new DataInputStream(s.getInputStream());
            dout = new DataOutputStream(s.getOutputStream());
            String msgin = "";
            
            while (!msgin.equals("exit")) {
             msgin = din.readUTF();
             msg_area.setText(msg_area.getText().trim()+"\n Server:\t"+msgin);
                
            }
        } catch (Exception e) {
        }
