        String msgin = "";
        try {
            ss = new ServerSocket(1201);
            s = ss.accept();
            
            din = new DataInputStream(s.getInputStream());
            dout = new DataOutputStream(s.getOutputStream());
            
            while (!msgin.equals("exit")) { 
            msgin = din.readUTF();
            msg_area.setText(msg_area.getText().trim()+"\n"+msgin);
            
                
            }
        } catch (Exception e) {
        }
        
